<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.newfeds.icare.activities.AddPrescription">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewAddPrescription"
                android:layout_gravity="center"
                android:background="#ffbdbd"
                android:src="@drawable/ic_menu_gallery"
                android:scaleType="fitCenter" />
        </FrameLayout>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/scrollView"
            android:layout_weight="2" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:isScrollContainer="true">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Prescription"
                    android:drawableLeft="@drawable/ic_menu_camera"
                    android:background="#33fffbfb"
                    android:id="@+id/buttonAddPrescriptionChooseFromGallary"
                    android:layout_gravity="left|bottom"
                    android:alpha=".5" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextAddPrescriptionTitle"
                    android:hint="Title"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextAddPrescriptionDescription"
                    android:hint="Description"/>



            </LinearLayout>

        </ScrollView>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Add Prescription"
            android:background="@drawable/ps__button_pinterest"
            android:textColor="#FFFFFF"
            android:id="@+id/buttonAddPrescription" />

    </LinearLayout>


</RelativeLayout>
